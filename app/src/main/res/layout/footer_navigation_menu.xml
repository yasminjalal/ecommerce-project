<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/social_media_section"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageView_slideMenuFooter_twitter"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:contentDescription="twitter"
        android:src="@drawable/twitter_icon_black" />

    <ImageView
        android:id="@+id/imageView_slideMenuFooter_instagram"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:contentDescription="instagram"
        android:src="@drawable/instagram_icon_black" />

    <ImageView
        android:id="@+id/imageView_slideMenuFooter_snapChat"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginEnd="66dp"
        android:layout_marginStart="5dp"
        android:contentDescription="snapChat"
        android:src="@drawable/snapchat_icon" />
</LinearLayout>


